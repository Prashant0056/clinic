pipeline {
    agent {
        node {
            label "docker-agent-alpine"
        }
    }

    triggers {
        pollSCM  '*/5 * * * * '
    }
    stages {
        stage ("Build"){
            steps {
                echo "Building"
            }
        }
    }

    stages {
        stage ('Test') {
            steps {
                echo "Testing"
            }
        }
    }
    

    stages {
        stage ("Deliver"){
            steps {
                echo "Deploying"
            }
        }
    }
}